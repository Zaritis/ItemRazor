@page
@model ItemRazor.Pages.CreateItemModel
@{
}

<h1>Create a new Computer Item</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Item.ItemId" class="control-lable"></label>
                <input asp-for="@Model.Item.ItemId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.Name" class="control-lable"></label>
                <input asp-for="@Model.Item.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item.Price" class="control-lable"></label>
                <input asp-for="@Model.Item.Price" class="form-control" />
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Item/GetAllItems">Back to List</a>
</div>